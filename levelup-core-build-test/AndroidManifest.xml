<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.scvngr.levelup.core.build"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <!-- WAKE_LOCK is required to test the PartialWakeLockManager. -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name="com.scvngr.levelup.core.build.CoreLibBuildApplication"
        android:allowBackup="false"
        android:icon="@drawable/levelup_ic_launcher"
        android:label="@string/app_name" >
        <activity android:name="com.scvngr.levelup.ui.activity.PermissionsRequestTestActivity">
            <intent-filter>
                <action android:name="com.scvngr.levelup.core.ACTION_REQUEST_PERMISSIONS" />
                <category android:name="android.intent.category.DEFAULT" />
                <data
                    android:host="authorization"
                    android:scheme="lutest" />
            </intent-filter>
        </activity>
    </application>

</manifest>
