<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- The style for LevelUpCodeView. -->
    <declare-styleable name="LevelUpCodeView">

        <!-- If true, colorizes the target corners using the LevelUp logo colors. -->
        <attr name="colorize" format="boolean" />
        <!-- If true, fades the colors to black to aid scanning. -->
        <attr name="fade_colors" format="boolean" />
    </declare-styleable>

    <!-- Styles for the default theme. -->
    <declare-styleable name="LevelUpCodeTheme">
        <attr name="levelup_code_view_style" format="reference" />
    </declare-styleable>

</resources>
